<Window x:Class="WpfApp1.HotkeyConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="配置快捷键" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="暂停游戏快捷键:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PauseHotkeyTextBox" Grid.Column="1" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#007ACC" KeyDown="HotkeyTextBox_KeyDown" Tag="pause" IsReadOnly="True"/>
            <Button Grid.Column="2" Content="清除" Click="ClearHotkey_Click" Tag="pause" Width="50" Margin="5" Background="#444" Foreground="White" BorderBrush="#666"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="恢复游戏快捷键:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ResumeHotkeyTextBox" Grid.Column="1" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#007ACC" KeyDown="HotkeyTextBox_KeyDown" Tag="resume" IsReadOnly="True"/>
            <Button Grid.Column="2" Content="清除" Click="ClearHotkey_Click" Tag="resume" Width="50" Margin="5" Background="#444" Foreground="White" BorderBrush="#666"/>
        </Grid>

        <Grid Grid.Row="2" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="二合一快捷键:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ToggleHotkeyTextBox" Grid.Column="1" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#007ACC" KeyDown="HotkeyTextBox_KeyDown" Tag="toggle" IsReadOnly="True" ToolTip="自动判断暂停或恢复"/>
            <Button Grid.Column="2" Content="清除" Click="ClearHotkey_Click" Tag="toggle" Width="50" Margin="5" Background="#444" Foreground="White" BorderBrush="#666"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="15,10">
            <CheckBox x:Name="MinimizeCheckBox" Content="暂停时自动最小化" Foreground="White" Margin="0,5" IsChecked="True" VerticalAlignment="Center"/>
            <CheckBox x:Name="SoundCheckBox" Content="开启声音提示" Foreground="White" Margin="0,5" IsChecked="True" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Content="保存设置" Width="100" Height="30" Margin="5" Click="SaveButton_Click" Background="#007ACC" Foreground="White" BorderBrush="#007ACC" FontWeight="Bold"/>
            <Button Content="取消" Width="80" Height="30" Margin="5" Click="CancelButton_Click" Background="#3E3E42" Foreground="White" BorderBrush="#3E3E42"/>
        </StackPanel>
    </Grid>
</Window>