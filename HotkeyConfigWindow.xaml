<Window x:Class="WpfApp1.HotkeyConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="配置快捷键" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="配置全局快捷键" Foreground="White" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="暂停游戏快捷键:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PauseHotkeyTextBox" Grid.Column="1" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#007ACC" KeyDown="HotkeyTextBox_KeyDown" Tag="pause" IsReadOnly="True"/>
        </Grid>
        
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="恢复游戏快捷键:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ResumeHotkeyTextBox" Grid.Column="1" Margin="5" Background="#3E3E42" Foreground="White" BorderBrush="#007ACC" KeyDown="HotkeyTextBox_KeyDown" Tag="resume" IsReadOnly="True"/>
        </Grid>
        
        <TextBlock Grid.Row="3" Text="按下所需的组合键来设置快捷键" Foreground="#AAAAAA" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="保存" Width="80" Margin="5" Click="SaveButton_Click" Background="#007ACC" Foreground="White" BorderBrush="#007ACC"/>
            <Button Content="取消" Width="80" Margin="5" Click="CancelButton_Click" Background="#3E3E42" Foreground="White" BorderBrush="#3E3E42"/>
        </StackPanel>
    </Grid>
</Window>